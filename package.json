{
  "name": "petme",
  "version": "1.0.0",
  "description": "A pet social site and also an ecommerce for cuties.",
  "main": "src/index.js",
  "scripts": {
    "start": "node dist",
    "client": "npm run dev --prefix frontend",
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "concurrently \"npm run server:dev\" \"npm run client\"",
    "server:dev": "nodemon --watch .env --watch src --exec babel-node src --source-maps",
    "build": "rimraf dist && babel src --copy-files --out-dir dist",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm run build && npm install --prefix frontend && npm run build --prefix frontend"
  },
  "keywords": [
    "pet"
  ],
  "author": "sonahang rai",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^11.0.0",
    "express": "^4.17.2",
    "express-validator": "^6.14.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.1.6",
    "nodemailer": "^6.7.2",
    "socket.io": "^4.4.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.16.8",
    "@babel/core": "^7.16.7",
    "@babel/node": "^7.16.8",
    "@babel/preset-env": "^7.16.8",
    "concurrently": "^7.0.0",
    "nodemon": "^2.0.15",
    "rimraf": "^3.0.2"
  }
}
