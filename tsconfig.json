{
  "compilerOptions": {
    "baseUrl": "./src",
    "types": ["node"],
    "target": "es6",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": false
  },
  "include": ["src"],
  "exclude": ["node_modules"],
  "ts-node": {
    "swc": true,
    "require": ["tsconfig-paths/register"]
  }
}
